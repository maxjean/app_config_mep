<%= content_for :head do %>

<h2>Your event organization details</h2>

<%= form_for @event, url: wizard_path do |f| %>
<!-- 	<div class="field">
		<%= f.label :"What is your e-mail address ?" %><br />
		<%= f.email_field :email %>
	</div> -->
<fieldset>
	<legend> Your event </legend>
	<div class="field">
		<%= f.label :rent_quantity, :"I want to rent " %><%= f.number_field :rent_quantity, :in => 1...10000, :autofocus => true%>
		<%= f.label :iPad, :"iPad(s) for " %><%= f.number_field :rent_length, :in => 1...100 %> day(s).
	</div>
	<br />
	<div class="field">
		<%= f.label :rent_location, :"My event is located in " %>
<!-- 		<%= f.select(:rent_location, 1..5, {}, {:style => "width: 4em;"}) %> -->
		<%= f.select(:rent_location, @countries_array, {:include_blank => true}) %>
	</div>
	<br />
	<div class="field">
		<%= f.label :wifi_setup, :"Do you need WiFi setup ? " %>
		<%= f.radio_button :wifi_setup, true %><%= f.label :"yes" %>
		<%= f.radio_button :wifi_setup, false %><%= f.label :no %><br />
	</div>
	<br />
	<div class="field">
		<%= f.label :requirements, :"Do you have any special requirements ? " %><br />
		<%= f.text_area :requirements, :rows => 5, :cols => 50, :placeholder => "If so, write them here" %>
	</div>
	<br />
</fieldset>
	<br />
<fieldset>
	<legend> Personal informations </legend>
	<div class="field">
		<%= f.label :firstname, :"What is your firstname ? " %><br/><%= f.text_field :firstname %>
	</div>
	<br />
	<div class="field">
		<%= f.label :lastname, :"What is your lastname ? " %><br/><%= f.text_field :lastname %>
	</div>
	<br />
	<div class="field">
		<%= f.label :phone_number, :"What is your phone number ? " %><br/><%= f.telephone_field :phone_number, :cols => 30 %>
	</div>
	<br />

</fieldset>
	<br />

	<div class="actions">
		<%= f.submit "Next" %>
	</div>
	<br />
<% end %>
<% end %>