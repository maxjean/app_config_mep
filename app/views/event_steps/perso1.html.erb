<h2>Your event organization details</h2>

<%= form_for @event, url: wizard_path do |f| %>
<!-- 	<div class="field">
		<%= f.label :"What is your e-mail address ?" %><br />
		<%= f.email_field :email %>
	</div> -->

	<div class="field">
		<%= f.label :"I want to rent " %><%= f.number_field :rent_quantity %>
		<%= f.label :"iPads for " %><%= f.number_field :rent_length %>
	</div>
	<br />
	<div class="field">
		<%= f.label :"My event is located in " %><%= f.text_field :rent_location %>
	</div>
	<br />
	<div class="field">
		<%= f.label :"Do you need WiFi setup ? " %>
		<%= f.radio_button :wifi_setup, true %><%= f.label :"yes" %>
		<%= f.radio_button :wifi_setup, false %><%= f.label :no %><br />
	</div>
	<br />
	<div class="field">
		<%= f.label :"Do you have any special requirements ? " %><br />
		<%= f.text_area :requirements, :rows => 5, :cols => 50, :placeholder => "If so, write them here" %>
	</div>
	<br />
	<div class="field">
		<%= f.label :"What is your firstname ? " %><br/><%= f.text_field :firstname %>
	</div>
	<br />
	<div class="field">
		<%= f.label :"What is your lastname ? " %><br/><%= f.text_field :lastname %>
	</div>
	<br />
	<div class="field">
		<%= f.label :"What is your phone number ? " %><br/><%= f.telephone_field :phone_number, :cols => 30 %>
	</div>
	<br />
	<div class="actions">
		<%= f.submit "Next" %>
	</div>

<% end %>